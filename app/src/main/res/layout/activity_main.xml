<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eric.myapplication.MainActivity">
    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="50sp"
        android:layout_marginTop="100dp"
        />
    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="20dp"
        style="@style/AudioBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:max="10000"
        android:progress="0"
        android:id="@+id/audiowave"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:background="#fff"
        android:id="@+id/play"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/record"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        app:srcCompat = "@drawable/ic_play_arrow_black_48dp"
        android:visibility="invisible"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:background="#fff"
        android:id="@+id/pause"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/record"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        app:srcCompat = "@drawable/ic_pause_black_48dp"
        android:visibility="invisible"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/stop"
        android:padding="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/record"
        android:layout_marginBottom="40dp"
        app:srcCompat = "@drawable/ic_stop_black_48dp"
        android:visibility="invisible"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/record"
        android:background="@drawable/roundedbtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"

        />
</RelativeLayout>

